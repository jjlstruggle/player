{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev:app",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "a",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "all": false,
        "sidecar": true,
        "scope": [{ "name": "server/appServer", "sidecar": true }]
      },
      "path": {
        "all": true
      },
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://*", "http://*"]
      },
      "window": {
        "close": true,
        "create": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "setFullscreen": true,
        "setMaximizable": true,
        "setMinimizable": true,
        "show": true,
        "startDragging": true,
        "unmaximize": true,
        "unminimize": true
      },
      "fs": {
        "all": false,
        "createDir": true,
        "exists": true,
        "readDir": false,
        "readFile": false,
        "removeFile": false,
        "scope": ["$RESOURCE/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": ["server/appServer"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "app.saga.dev",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "height": 630,
        "width": 1120,
        "minWidth": 800,
        "minHeight": 600,
        "maxHeight": 630,
        "maxWidth": 1120,
        "fileDropEnabled": false,
        "decorations": false,
        "center": true
      },
      {
        "label": "wallpaper",
        "fullscreen": true,
        "resizable": false,
        "skipTaskbar": true,
        "fileDropEnabled": false,
        "visible": false,
        "decorations": false,
        "url": "wallpaper.html"
      }
    ]
  }
}
